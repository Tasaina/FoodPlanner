<Window x:Class="FoodPlanner.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FoodPlanner"
        mc:Ignorable="d"
        Title="InputBox" Height="250" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBox Name="TextBox" Grid.ColumnSpan="2" Text="New Entry Name" Margin="10" VerticalAlignment="Center"
                 HorizontalAlignment="Center" Width="300" Height="50" />
        <Button Name="CancelButton" Click="CancelButton_OnClick" HorizontalAlignment="Center"
                VerticalAlignment="Center" Padding="0 10" Width="100" FontSize="26"
                Grid.Row="1">
            Cancel
        </Button>
        <Button HorizontalAlignment="Center" Name="OkButton" Click="OkButton_OnClick" VerticalAlignment="Center"
                Grid.Row="1" Grid.Column="1" Width="100"
                Padding="0 10"
                FontSize="26">
            Ok
        </Button>
    </Grid>
</Window>